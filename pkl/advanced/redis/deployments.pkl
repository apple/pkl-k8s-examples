amends "..."

deployments {
  default {
    spec {
      selector {
        matchLabels {
          ["tier"] = "backend"
        }
      }
      template {
        metadata {
          labels {
            ["tier"] = "backend"
          }
        }
        spec {
          containers {
            default {
              ports {
                new {
                  containerPort = 6379
                }
              }
            }
          }
        }
      }
    }
  }
  ["redis-primary"] {
    spec {
      selector {
        matchLabels {
          ["role"] = "primary"
        }
      }
      replicas = 1
      template {
        metadata {
          labels {
            ["role"] = "primary"
          }
        }
        spec {
          containers {
            new {
              name = "primary"
              image = "k8s.gcr.io/redis:e2e"
            }
          }
        }
      }
    }
  }

  ["redis-secondary"] {
    spec {
      selector {
        matchLabels {
          ["role"] = "secondary"
        }
      }
      replicas = 2
      template {
        metadata {
          labels {
            ["role"] = "secondary"
          }
        }
        spec {
          containers {
            new {
              name = "secondary"
              image = "gcr.io/google_samples/gb-redissecondary:v1"
              env {
                new {
                  name = "GET_HOSTS_FROM"
                  value = "dns"
                }
              }
            }
          }
        }
      }
    }
  }
}
